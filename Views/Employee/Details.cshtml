@model Employee

@{
    ViewData["Title"] = "Employee Details";
}

<h2>Employee Details</h2>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <td>@Model.EmployeeID</td>
    </tr>
    <tr>
        <th>Name</th>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <th>Position</th>
        <td>@Model.Position</td>
    </tr>
    <tr>
        <th>Salary</th>
        <td>@Model.Salary</td>
    </tr>
</table>

<a asp-action="Index" class="btn btn-secondary">Back to List</a>
<a asp-action="Edit" asp-route-id="@Model.EmployeeID" class="btn btn-warning">Edit</a>
